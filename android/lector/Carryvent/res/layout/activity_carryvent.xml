<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Carryvent" >

<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="418dp" >

	    <Button
	        android:id="@+id/botonEventos"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="100dp"
	        android:onClick="listaEventos"
	        android:text="@string/listaEventos" />

	    <Button
	        android:id="@+id/botonPasajeros"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/botonEventos"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="16dp"
	        android:onClick="listaPasajeros"
	        android:text="@string/listaPasajeros" />
	    
	    <Button
	        android:id="@+id/botonRuta"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/botonPasajeros"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="16dp"
	        android:onClick="mostrarRuta"
	        android:text="@string/mostrarRuta" />
	    
	</RelativeLayout>

</ScrollView>
