<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="418dp" >

	    <TextView
            android:id="@+id/textoVistaEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seleccioneEvento" />

        <Spinner
            android:id="@+id/listaEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textoVistaEventos" />
        
        <ImageView
            android:id="@+id/imagenEvento"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/listaEventos"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/nombreEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imagenEvento"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/lugarEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nombreEvento"
            android:layout_below="@+id/nombreEvento"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/fechaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lugarEvento"
            android:layout_below="@+id/lugarEvento"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/horaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fechaEvento"
            android:layout_below="@+id/fechaEvento"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/obtenerLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/horaEvento"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:onClick="obtenerListaPasajeros"
            android:text="@string/obtenerLista" />
        
        <Button
            android:id="@+id/obtenerRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/obtenerLista"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            
            android:text="@string/obtenerRuta" />
	    
	</RelativeLayout>
    

</ScrollView>
