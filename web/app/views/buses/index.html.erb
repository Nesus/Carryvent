
<h1>Lista de buses</h1>

<table>
  <thead>
    <tr>
      <th>Bus</th>
      <th>Patente</th>
      <th>Empresa</th>
      <th>Asientos</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= bus.bus_id %></td>
        <td><%= bus.patente %></td>
        <td><%= bus.empresa_id %></td>
        <td><%= bus.asientos %></td>
        <td><%= bus.tipo %></td>
        <td><%= link_to 'Mostrar', bus %></td>
        <td><%= link_to 'Editar', edit_bus_path(bus) %></td>
        <td><%= link_to 'Eliminar', bus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Bus', new_bus_path %>

