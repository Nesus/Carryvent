<script type="text/javascript">
function abrirCampos(){
	var check = $("#ranking_assist").is(':checked');

	if(check){
		$(".rating-symbol").css("color", "orange");
		$("#ranking_value").prop('disabled', false);
		$("#ranking_comment").prop('disabled', false);
	}
	else{
		$(".rating-symbol").css("color", "grey");
		$("#ranking_value").prop('disabled', true);
		$("#ranking_comment").prop('disabled', true);
		$("#ranking_value").val(0);
		$("#cantidad").html($("#ranking_value").val());
		$("#ranking_comment").val("");
	}
}

$('#ranking_value').on('change', function () {
  $("#cantidad").html($("#ranking_value").val());
});

</script>