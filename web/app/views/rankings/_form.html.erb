  <%= simple_form_for(@ranking) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="row">
        ¿Asistió al evento utilizando el carpool?
        <%= f.check_box :assist, :onchange=> "abrirCampos();"  %>
      </div>
      
      <div class="row">
      <%= f.label "Valoración" %> <br>
      <%= f.select :value , [[1],[2],[3],[4],[5]], {}, :disabled=> "disabled" %>
      </div>
      <div class="row">
      <%= f.label "Dejale un comentario!" %> <br>
      <%= f.text_area :comment, :disabled=> "disabled" %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Enviar Valoración" %>
    </div>
  <% end %>



