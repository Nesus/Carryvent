  <%= simple_form_for(@ranking) do |f| %>
    <%= f.error_notification %>
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="form-inputs">
          <div class="row">
            <h3>¿Asistió al evento utilizando el carpool?</h3>
            <%= f.check_box :assist, :onchange=> "abrirCampos();", :class=> "form-control"  %> 
            <h4 class="pull-right">(Clickear si asistió)</h4>
          </div>
          
          <div class="row">
          <h3><%= f.label "Valoración" %></h3>
            <div class="text-center">
              <input type="hidden" class="rating" name="ranking[value]" id="ranking_value" disabled= "disabled" data-start="1" data-stop="6"/>
              <span id="cantidad"> 0 </span> Estrellas
            </div>
          </div>
          <div class="row">
          <h3><%= f.label "Dejale un comentario!" %></h3>
          <%= f.text_area :comment, :disabled=> "disabled", :class=> "form-control" %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit "Enviar Valoración", :class => "btn btn-primary btn-block" %>
        </div>
      </div>  
    </div>
  <% end %>
<script type="text/javascript" src="bootstrap-rating.js"></script>

