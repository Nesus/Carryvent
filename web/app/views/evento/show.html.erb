<!-- Page Content -->
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'>
</script>
<div class="container">

  <!-- Eventos -->
  <div class="row">
    <div class="col-xs-12">
      <h2 class="page-header"><%= @evento.name %></h2>
      <div class="col-xs-3">
        <% if @evento.image %>
            <img class="img-square img-responsive img-center" src="<%= @evento.image %>" alt="">
        <% else %>
         <img class="img-square img-responsive img-center" src="http://placehold.it/200x200" alt="">
        <% end %>
      </div>
      <div class="col-xs-4">
        <p><b>Descripci√≥n:<%= @evento.information %> </b></p>
        <p><b>Lugar: <!-- FALTA ESTO --> </b></p>
        <p><b>Fecha: <!-- FALTA ESTO --> </b></p>
        <p><b>Hora:  <!-- FALTA ESTO --></b></p>
        <p><b>Estado de los pasajes:  </b><!-- FALTA ESTO --></p>
        <p><button class='btn btn-lg btn-primary'>Compra tu pasaje</button> 
        <% if current_user.present? %>
          <%= link_to "Publicar Carpool", publicar_carpool_path(@evento) , :class => 'btn btn-lg btn-primary'%>
        <% end %></p>
      </div>
      <div class="col-xs-5">

          <div style='width: 250px;'>
            <div id="map" style='width: 400px; height: 250px;'></div>
          </div>

          <script type="text/javascript">
            handler = Gmaps.build('Google');
            handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
              markers = handler.addMarkers([
                {
                  "lat": 0,
                  "lng": 0,
                  "picture": {
                    "url": "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
                    "width":  36,

                    "height": 36
                  },
                  "infowindow": "hello!"
                }
              ]);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
            });
          </script>
        <!-- <img class="img-square img-responsive img-center" src="http://placehold.it/200x200" alt=""> -->
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-6">
        <h4>Ofertas Carpool</h4>
        <div id="ofertasCarpool" class="hero-unit">
          
        </div>
      </div>
      <div class="col-xs-6">
        <h4>Comentarios Evento</h4>
        <div id="comentariosEvento" class="hero-unit" >
        <%= render :partial => 'comments/form', :locals => { :comment => @new_comment } %> <br>
        <%= render :partial => 'comments/comment', :collection => @comments, :as => :comment %> <br>
        </div>
      </div>
    </div>
  </div>

  <% if !@publicacionCarpools.nil? %>
    <div class="panel panel-default" id="tabs">
      <input id="tab-1" type="radio" name="radio-set" class="tab-selector-1" checked="checked" />
      <label for="tab-1" class="tab-label-1">Ofertas de Carpool</label>
                              
      <div class="content">
        <div class="content-1">
          <div style="width: 100%; height: 250px; overflow: auto;">
            <TABLE BORDER=0>
                <% @publicacionCarpools.each do |pub| %>

                <TR>
                  <TD WIDTH=200 HEIGHT=110>
                    <img src="<%= pub.user_evento.user.foto %>?type=large" width="100" height="100" alt="" class="center-block img-responsive">
                  </TD>
                  <TD WIDTH=200 HEIGHT=110>
                    <p><b>Nombre: <%= pub.user_evento.user.nombre %> </b></p>
                    <p><b>Ciudad: <%=  pub.user_evento.user.ciudad %> </b></p>
                  </TD>
                  <TD>   
                    <p><%= link_to "Detalle", mostrar_carpool_path(@evento.id, pub.id), :class => 'btn btn-lg btn-primary btn-block' %></p>
                  </TD>
                </TR>
              <% end %>
            </TABLE> 
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <hr class="container">

  <!-- Footer -->
  <footer class="container">
      <div class="row">
          <div class="col-lg-12">
              <p>Copyright &copy; Carryvent 2014</p>
          </div>
          <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
  </footer>
</div>
