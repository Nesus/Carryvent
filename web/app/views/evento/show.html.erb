<% title @evento.name %>
<!-- Page Content -->
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'>
</script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js' type='text/javascript'></script>
<div class="container">

  <!-- Eventos -->
  <div class="row">
    <div class="col-xs-12">
      <h2 class="page-header"><%= @evento.name %></h2>
      <div class="col-xs-3">
        <% if @evento.image %>
            <img class="img-square img-responsive img-center" src="<%= @evento.image %>" alt="">
        <% else %>
         <img class="img-square img-responsive img-center" src="http://placehold.it/200x200" alt="">
        <% end %>
      </div>

      <div class="col-xs-4">
        <p><b>Descripción: </b><%= @evento.subtitle %> </p>
        <p><b>Lugar: </b><%= @evento.address %> </p>
        <%if !@evento.information.nil? %>
          <p><b>Información Extra: </b><%= @evento.information %> </p>
        <% end %>
        <p><b>Fecha: </b><%= @evento.date.strftime("%d/%m/%Y") %> </p>
        <p><b>Hora:  </b><%= @evento.time.strftime("%H:%M") %> </p>
        <p><b>Estado de los pasajes:  </b> Etapa de Reserva </p>

        <div class="row">
          <div class="col-md-6">
            <% if @evento.bus %>
              <% if current_user.present? %>
                <%= link_to "Reserva tus pasajes", reserva_pasaje_path, class: 'btn btn-primary' %>
              <% end %>
            <% end %>
          </div>
          <div class="col-md-6">
        <% if current_user.present?  %>
          <%= link_to "Publicar Carpool", publicar_carpool_path(@evento) , :class => 'btn btn-primary'%>
        <% end %></p>
        </div>
        </div>
      </div>
      <div class="col-xs-5">

          <div style='width: 250px;'>
            <div id="map" style='width: 400px; height: 250px;'></div>
          </div>
          
          <script type="text/javascript">
            handler = Gmaps.build('Google');
            handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
              markers = handler.addMarkers(<%=raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
            })
          </script>


        <!-- <img class="img-square img-responsive img-center" src="http://placehold.it/200x200" alt=""> -->
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="col-md-6 col-xs-12">
        <h4>Comentarios Evento</h4>
        <div  class="comment-container" >
          <div class="comments">
            <div class="first-comment"></div>
            <%= render :partial => 'comments/comment', :collection => @comments, :as => :comment %>
          </div>

        <% if current_user %>
          <div class="comment-send"> 
            <%= render :partial => 'comments/form', :locals => { :comment => @new_comment } %>
        </div>
        <% end %>
        </div>
      </div>
      <div class="col-md-6 col-xs-12">
        <h4>Ofertas Carpool</h4>
        <div class="publicacion-container">
        	<% if !@publicacionCarpools.nil? %>
	          <TABLE class="tabla-publicacion">
              <tr>
              <th> Usuario </th>
              <th> Ciudad </th>
              <th> Asientos disponibles </th>
              <th>  Detalles</th>
              </tr>
              <% @publicacionCarpools.each do |pub| %>
	              <TR>
	                <TD>
                    <% if pub.user_evento.user.foto.thumb.url %>
                     <% img = pub.user_evento.user.foto.thumb.url %>
                     <img src="<%= img  %>" alt="" class="img-circle">
                    <% else %>
                      <img src="/assets/place_user.png", class="img-circle", style="width:30px;heigh:30px">
                    <% end %>
                    <%= link_to pub.user_evento.user.nombre[0..20]+"..", perfil_user_path(pub.user_evento.user) %>
	                </TD>
	                <TD>
	                  <%= pub.user_evento.user.ciudad_region%>
	                </TD>
                  <td>
                    <%= pub.asientos_libres %>
                  </td>
	                <TD>
                  <% if current_user %>   
	                  <%= link_to  mostrar_carpool_path(@evento.id, pub.id) do %>
                      <i class="fa fa-bars"></i>
                        Detalle
                    <% end %>
                  <% else %>
                    Detalle
                  <% end %>
	                </TD>
	              </TR>
	            <% end %>
	          </TABLE> 
				  <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

        
