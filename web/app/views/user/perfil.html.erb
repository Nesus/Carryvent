            <div class="content">
                <div class="content-1">
                    <div style="width: 100%; height: 250px; overflow: auto;">
                        <TABLE BORDER=0>
                        	<% @userEventos.each do |user_evento| %>
							
							<TR>
                                <TD WIDTH=200 HEIGHT=110>
                                    <img src="<%= user_evento.evento.imagen %>" 
                                    width="100" height="100" alt="" class="center-block img-responsive">
                                </TD>
                                <TD WIDTH=400 HEIGHT=110>
                                    <p><b>Titulo:</b> <%= user_evento.evento.nombre %> </p>
                                    <p><b>Fecha:</b> <%=  user_evento.evento.fecha_inicio %> </p>
