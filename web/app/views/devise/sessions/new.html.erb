<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
          <h1 class="text-center login-title">
            Ingreso   
            <% if  resource_name == :publicador %>
              Publicador
            <% elsif  resource_name == :user %>
              Usuario
            <% end %>
          </h1>
          <div class="account-wall">
            <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">
            
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>

            <% if resource_name != :user %>
              <%= f.text_field :username, :class => "form-control", :placeholder =>"Username" %>

            <% else %>
             <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
            <% end %>

            <%= f.password_field :password  , :class => "form-control", :placeholder => "ContraseÃ±a", autocomplete: "off" %>

            <% if devise_mapping.rememberable? -%>

            <%= f.check_box :remember_me %> <%= f.label "Recordar" %>
            <% end -%>
            
            <%= f.submit  "Ingresar", :class => "btn btn-lg btn-primary btn-block" %>
      <% end %>
      </div>
        </div>
          </div>
        <% if resource_name == :user %>
         <%= link_to "Registrarse", new_registration_path(resource_name), :class => "text-center new-account" %>
        <i class="icon-facebook"></i><%=link_to "Ingresar con Facebook" ,omniauth_authorize_path(resource_name, :facebook) %> <br>
        <i class="icon-facebook"></i><%=link_to "Ingresar con Twitter" , omniauth_authorize_path(resource_name, :twitter) %> <br>
         <% end %>
          <!--<%= render "devise/shared/links" %>-->
    </div>
</div>
